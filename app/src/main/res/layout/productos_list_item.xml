<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Contenedor de las imÃ¡genes -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Imagen 1 -->
        <ImageView
            android:id="@+id/producto_image1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <!-- Imagen 2 -->
        <ImageView
            android:id="@+id/producto_image2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <!-- Imagen 3 -->
        <ImageView
            android:id="@+id/producto_image3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <!-- Contenedor de los textos -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Texto 1 -->
        <TextView
            android:id="@+id/producto_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Texto 1"
            android:gravity="center_vertical" />

        <!-- Texto 2 -->
        <TextView
            android:id="@+id/producto_precio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Texto 2"
            android:gravity="center_vertical" />

        <!-- Texto 3 -->
        <TextView
            android:id="@+id/producto_creacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Texto 3"
            android:gravity="center_vertical" />
    </LinearLayout>
</LinearLayout>
