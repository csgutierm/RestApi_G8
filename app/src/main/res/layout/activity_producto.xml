<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductoActivity">

    <!-- Calificación con estrellas -->
    <RatingBar
        android:id="@+id/producto_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stepSize="1"
        android:numStars="5"
        app:layout_constraintTop_toBottomOf="@id/producto_description"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Campo de comentarios -->
    <EditText
        android:id="@+id/producto_comment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/producto_description"
        app:layout_constraintStart_toEndOf="@id/producto_rating"
        app:layout_constraintEnd_toEndOf="parent"
        android:hint="Agrega un comentario" />


    <!-- Título -->
    <TextView
        android:id="@+id/producto_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Precio -->
    <TextView
        android:id="@+id/producto_precio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="price"
        app:layout_constraintTop_toBottomOf="@id/producto_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Fecha de Creación -->
    <TextView
        android:id="@+id/producto_creacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="creationAt"
        app:layout_constraintTop_toBottomOf="@id/producto_precio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Imagen 1 -->
    <ImageView
        android:id="@+id/producto_image1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/producto_creacion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/producto_image2" />

    <!-- Imagen 2 -->
    <ImageView
        android:id="@+id/producto_image2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/producto_creacion"
        app:layout_constraintStart_toEndOf="@id/producto_image1"
        app:layout_constraintEnd_toStartOf="@id/producto_image3" />

    <!-- Imagen 3 -->
    <ImageView
        android:id="@+id/producto_image3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/producto_creacion"
        app:layout_constraintStart_toEndOf="@id/producto_image2"
        app:layout_constraintEnd_toEndOf="parent" />


    <!-- Descripción -->
    <TextView
        android:id="@+id/producto_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="description"
        app:layout_constraintTop_toBottomOf="@id/producto_image1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
